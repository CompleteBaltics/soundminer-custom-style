@import './webfonts.pcss';
@import './header.pcss';
@import './client.pcss';
@import './login.pcss';
@import './layout.pcss';
@import './player.pcss';
@import './panel.pcss';

html, body {
  height: 100%;
}
::-webkit-scrollbar {
  all: initial;
  @apply bg-lipstick;
}
::-webkit-scrollbar-track {
  all: initial;
}
::-webkit-scrollbar-thumb {
  all: initial;
  @apply bg-black;
}
::-webkit-scrollbar-thumb:window-inactive {
  all: initial;
  @apply bg-black;
}
