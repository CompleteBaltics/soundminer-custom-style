body {
  @apply overflow-auto bg-black;
}

div#wrap {
  @apply relative;
  & #main {
    @apply min-h-screen;

    & #wrap-player {
      @apply relative;
      top: auto!important;
    }

    & #wrap-panel {
      @apply relative;
      top: auto!important;

      & .view-panel {
        @apply relative flex flex-col;

        &>.handle {
          @apply hidden;
        }

        &>.msegs {
          @apply relative left-auto right-auto top-0 mb-0;

          & ul {
            margin: 0!important;
          }
        }

        & .mpage {
          @apply relative left-auto right-auto top-0 bottom-auto p-4 box-border w-full;

          &>div {
            @apply relative;

            & .metadata {
              @apply relative bottom-auto;

              & table {
                @apply w-full table-fixed whitespace-normal break-words;
              }
            }
          }
        }

        & #wrap-project {
          & .search-project-outer {
            @apply float-none m-0 flex mb-6;
          }

          & ul.project {
            @apply relative top-auto m-0;

            & .folders {
              @apply relative bottom-auto top-auto;
            }
          }
        }
      }
    }

    & #wrap-client {
      @apply relative float-none;
      top: auto!important;
      right: auto!important;

      & div#wrap-nav-bar {
        @apply relative;
      }

      & div#wrap-content {
        @apply relative;

        & div#view-content {
          @apply relative;

          & div#content {
            @apply relative bg-transparent;

            & div.wrap-mixed {
              @apply relative;

              & .wrap-tracks {
                @apply relative;

                & div.view-tracks {
                  min-height: calc(100vh - 21rem);

                  & div.tracks {
                    @apply relative bottom-0 overflow-x-auto overflow-y-hidden min-h-full;
                    padding-bottom: 4rem!important;
                    max-height: none;
                  }

                  & div.foot {
                    @apply h-16;
                  }
                }
              }
            }
          }
        }

        & div.view-home {
          @apply relative;
        }
      }
    }
  }
}
